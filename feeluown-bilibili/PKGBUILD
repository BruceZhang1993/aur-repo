pkgname=feeluown-bilibili
epoch=1
pkgver=0.3
pkgrel=1
pkgdesc="Bilibili provider for FeelUOwn"
arch=('any')
url="https://github.com/BruceZhang1993/feeluown-bilibili"
license=('GPL3')
depends=('feeluown' 'python-cachetools' 'python-beautifulsoup4' 'python-pycryptodomex')
makedepends=('python-setuptools' 'python-pip')
source=("https://pypi.io/packages/source/f/feeluown-bilibili/feeluown-bilibili-$pkgver.tar.gz")
sha512sums=('c434b1763e4f429619452a6ecf64dc50fe6db6c3fabbfce640c5d5e56f8eaa01f1f38d3b5651c4d2b9bd70876bd40c292a1a00549302e54f958cadb524a93eee')

build() {
  cd feeluown_bilibili-$pkgver
  python setup.py build
}

package() {
  cd feeluown_bilibili-$pkgver
  python setup.py install --root="$pkgdir/" --optimize=1 --skip-build
}
